<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New-Project</title>
    <link rel="stylesheet" href="/stylesheets/newProject.css">
    <style>
        form #left #link{
      font-size: 1.3rem;
      color: rgb(12, 229, 131);
  }
  @media (max-width : 650px){
      form #left #link{
      font-size: 0.7rem;
      color: rgb(12, 229, 131);
  }
  }
  </style>
</head>
<body>
    
    <form method="post" action="/users/profile/<%=user.erp_id%>/new" enctype="multipart/form-data">
        <h2>DeployedZone</h2>
        <div id="all">
            <div id="left">
                <input type="text" placeholder="Enter Project Title" name="title" id="title" required>
                <div>
                    <textarea name="description" id="description" rows="6" cols="12" placeholder="Describe Your Project..." oninput="validateCharacterLimit()"></textarea>
                    <p id="charCount" style="text-align: end; margin-right: 60px; margin-top: 5px;">Character Count: 0/800</p>
                </div>
                <input type="text" placeholder="Enter Project URL" name="link" id="link">
            </div>
            <div id="right">
                <div class="imagePreview">
                    <img src="" alt="Project Photo" id="movieImage">
                </div>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
        </div>
        <button type="submit" id="submitBtn">Submit</button>
    </form>


    <script>
         let file;
        let image = document.querySelector("#image")
        image.addEventListener("change",function(event){
    // console.log(event.target.files[0]);
     file = event.target.files[0];
     const fileURL = URL.createObjectURL(file);
     document.querySelector("#movieImage").src = fileURL;
     console.log(fileURL);
})
    </script>



<script>
    function validateCharacterLimit() {
        const description = document.getElementById("description");
        const charCountDisplay = document.getElementById("charCount");
        const submitButton = document.getElementById("submitBtn");
        
        // Get the length of the description text
        const charCount = description.value.length;

        // Update character count display
        charCountDisplay.textContent = `Character Count: ${charCount}/800`;

        // Disable submit button if character count exceeds 2000
        if (charCount > 800) {
            charCountDisplay.style.color = "red";
            submitButton.disabled = true;
        } else {
            charCountDisplay.style.color = "white";
            submitButton.disabled = false;
        }
    }
</script>

</body>
</html>